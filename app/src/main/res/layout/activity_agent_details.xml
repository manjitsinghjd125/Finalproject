<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/form_photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/agent1"
            android:background="#00ABEC"/>



        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/aname"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level:"

            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="10dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agency:"

            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/agency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="10dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Website:"

            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="10dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Country:"

            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="10dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone number:"

            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="10dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="10dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/web"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:layout_marginLeft="30dp"
                android:background="@drawable/world" />

            <Button
                android:id="@+id/form_call"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="70dp"
                android:layout_toEndOf="@+id/web"
                android:background="@android:drawable/stat_sys_phone_call"
                android:backgroundTint="@android:color/background_dark" />

            <Button
                android:id="@+id/geoloaction"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="70dp"
                android:layout_toEndOf="@+id/form_call"
                android:background="@android:drawable/ic_menu_myplaces"
                android:backgroundTint="@android:color/background_dark" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/history"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:onClick="mission"
                android:background="@android:drawable/ic_dialog_info"
                android:backgroundTint="@android:color/background_dark" />

            <Button
                android:id="@+id/sms"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="71dp"
                android:layout_toEndOf="@+id/history"
                android:background="@android:drawable/ic_dialog_email"
                android:backgroundTint="@android:color/background_dark" />

            <Button
                android:id="@+id/sendpic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="70dp"
                android:layout_toEndOf="@+id/sms"
                android:onClick="senddata"
                android:background="@android:drawable/ic_menu_camera"
                android:backgroundTint="@android:color/background_dark" />

        </RelativeLayout>

        <Button
            android:id="@+id/addmission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="60dp"
            android:onClick="addmission"
            android:text="Assign Mission"
            android:layout_marginEnd="61dp" />
        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="60dp"
            android:onClick="delete"
            android:text="Delete Agent"
            android:layout_marginEnd="61dp" />


    </LinearLayout></ScrollView>